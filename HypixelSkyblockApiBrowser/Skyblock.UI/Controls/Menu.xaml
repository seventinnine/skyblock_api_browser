<UserControl x:Class="Skyblock.UI.Controls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Skyblock.UI.Controls"
             xmlns:viewmodels="clr-namespace:Skyblock.UI.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Lists">"
                <MenuItem Header="Bit Prices" Click="ShowBitPrices"/>
                <MenuItem Header="Accessory Prices" Click="ShowAccessoryPrices"/>
                <Separator />
                <MenuItem Header="Exit" />
            </MenuItem>
        </Menu>
    </DockPanel>
</UserControl>
